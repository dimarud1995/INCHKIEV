@model RudDmytro_INCHKIEV_TEST.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="login" asp-controller="account">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="login" class="control-label"></label>
                <input asp-for="login" class="form-control" type="email" id="emailLogin"/>
                <span asp-validation-for="login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pass" class="control-label"></label>
                <input asp-for="pass" class="form-control" type="password" id="passwordLogin" />
                <span asp-validation-for="pass" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login"  id="submitLogin" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Books" asp-controller="Home">Back to List</a>
</div>

